<div class="panel">
  <div class="panel-heading">
    <h2><%= @post.title %></h2>
    <h3><%= @post.lead %></h3>
    <h4><%= @post.slug %></h4>
  </div>

  <div class="panel-body">
    <p>
      <strong>Published at:</strong>
      <%= @post.published_at %>
    </p>

    <%= @post.body.html_safe %>
  </div>
</div>
